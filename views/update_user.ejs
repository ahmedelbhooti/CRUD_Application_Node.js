<!-- include Header -->
<%- include('include/_header.ejs') %>
    <!-- /include Header -->


    <!-- Main -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/" class="border-shadow">
                        <i class="fa-sharp fa-solid fa-arrow-left"></i> All Users
                    </a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>
                <span class="text-light">Use the below form to Update data</span>
            </div>
            <!--form Handling-->
            <form id="update_user" method="POST">
                <div class="new_user">
                    <div class="form-group ">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%=users._id  %>">
                        <input type="text" name="name" value="<%=users.name %>" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Email</label>
                        <input type="text" name="email" value="<%=users.email %>" placeholder="example@gmail.com">
                    </div>
                    <div class="form-group radio">
                        <label for="gender" class="text-light">Gender</label>
                        <div class="radio inline">
                            <input type="radio" id="radio-2" name="gender" value="Male" <%=users.gender=='Male'
                                ? 'checked' :'' %>>
                            <label for="radio-2" class="radio-label">Male</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-3" name="gender" value="Female" <%=users.gender=='Female'
                                ? 'checked' :'' %>>
                            <label for="radio-3" class="radio-label">Female</label>
                        </div>
                    </div>
                    <div class="form-group radio">
                        <label for="status" class="text-light">Status</label>
                        <div class="radio inline">
                            <input type="radio" id="radio-4" name="status" value="Active" <%=users.status=='Active'
                                ? 'checked' :'' %>>
                            <label for="radio-4" class="radio-label">Active</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-5" name="status" value="InActive" <%=users.status=='InActive'
                                ? 'checked' :'' %>>
                            <label for="radio-5" class="radio-label">InActive</label>
                        </div>
                    </div>
                    <div class="__container">
                        <div class="_center">
                            <button class="_btn">
                                <svg width="180px" height="60px" viewBox="0 0 180 60" class="border">
                                    <polyline points="179,1 179,59 1,59 1,1 179,1" class="bg-line" />
                                    <polyline points="179,1 179,59 1,59 1,1 179,1" class="hl-line" />
                                </svg>
                                <span>Save <i class="fa-solid fa-bookmark"></i></span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            <!--/form Handling-->
        </div>
    </main>
    <!-- /Main -->


    <!-- include Footer-->
    <%- include('include/_footer.ejs') %>
        <!-- /include Footer -->